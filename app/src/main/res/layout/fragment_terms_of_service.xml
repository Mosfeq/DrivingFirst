<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".TermsOfServiceFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms of Service"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/tos1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please read these Terms of Service ('Terms') carefully before using our application ('the Application'). These Terms govern your access to and use of the Application."
            android:layout_below="@+id/title"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Acceptance of Terms"
            android:layout_below="@+id/tos1"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By using the Application, you agree to be bound by these Terms. If you do not agree with any part of these Terms, you may not access or use the Application."
            android:layout_below="@+id/tos2"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. User Responsibilities"
            android:layout_below="@+id/tos3"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Account Creation: In order to use certain features of the Application, you may be required to create an account. You are responsible for maintaining the confidentiality of your account information and are solely responsible for all activities that occur under your account."
            android:layout_below="@+id/tos4"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Compliance with Laws: You agree to use the Application in compliance with all applicable laws, regulations, and third-party rights."
            android:layout_below="@+id/tos5"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. User Conduct: You agree not to engage in any conduct that may interfere with or disrupt the functioning of the Application or its services, or that may violate the rights of other users or third parties."
            android:layout_below="@+id/tos6"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Intellectual Property"
            android:layout_below="@+id/tos7"
            android:textStyle="bold"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Ownership: The Application and all of its content, including but not limited to text, graphics, logos, and images, are the intellectual property of the Application's owner. You agree not to reproduce, distribute, modify, or create derivative works of any part of the Application without the owner's prior written consent."
            android:layout_below="@+id/tos8"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. User Content: By using the Application, you grant the Application's owner a non-exclusive, royalty-free, worldwide, and perpetual license to use, reproduce, modify, and distribute any content you submit through the Application."
            android:layout_below="@+id/tos9"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Privacy"
            android:layout_below="@+id/tos10"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Data Collection: The Application may collect and store certain personal information as outlined in our Privacy Policy. By using the Application, you consent to the collection and processing of your personal information."
            android:layout_below="@+id/tos11"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Security: We take reasonable measures to protect your personal information; however, we cannot guarantee the security of your data transmitted through the Application."
            android:layout_below="@+id/tos12"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Limitation of Liability"
            android:layout_below="@+id/tos13"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. The Application is provided 'as is' and without warranties of any kind, whether express or implied."
            android:layout_below="@+id/tos14"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. In no event shall the Application's owner be liable for any direct, indirect, incidental, special, or consequential damages arising out of or in connection with your use of the Application."
            android:layout_below="@+id/tos15"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Modifications to the Terms"
            android:layout_below="@+id/tos16"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We reserve the right to modify or update these Terms at any time without prior notice. Your continued use of the Application after any changes to the Terms constitutes your acceptance of the modified Terms."
            android:layout_below="@+id/tos17"
            android:layout_marginBottom="15dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. Termination"
            android:layout_below="@+id/tos18"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We may, at our sole discretion, suspend or terminate your access to the Application without prior notice for any reason, including but not limited to a violation of these Terms."
            android:layout_below="@+id/tos19"
            android:layout_marginBottom="20dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tos21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="By using the Application, you acknowledge that you have read, understood, and agree to be bound by these Terms of Service. If you do not agree with any part of these Terms, please refrain from using the Application."
            android:layout_below="@+id/tos20"
            android:textStyle="bold"
            android:textSize="15sp"/>

    </RelativeLayout>

</ScrollView>