<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlay_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="35dp"
    android:background="@color/dark_blue"
    tools:context=".RegisterPage">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginBottom="40dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btn_RegisterAsLearner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Learner"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/button_features"
            android:textColor="@color/dark_blue" />

        <Button
            android:id="@+id/btn_RegisterAsInstructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instructor"
            android:layout_marginLeft="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/button_features"
            android:textColor="@color/dark_blue" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_createEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_features"
        android:padding="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:hint="Email"
        android:visibility="visible"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_createPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_features"
        android:padding="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:hint="Password"
        android:visibility="visible"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_createConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_features"
        android:padding="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:hint="Confirm Password"
        android:visibility="visible"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_features"
        android:textColor="@color/dark_blue"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/linlay_login_here"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_changePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_changeToLoginPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Here"
            android:textColor="@color/turquoise"
            android:textSize="17sp"
            android:padding="5dp"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>