<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linlay_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="35dp"
    android:background="@color/dark_blue"
    tools:context=".RegisterPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register \n     As\n Learner"
                android:layout_weight="1"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textColor="@color/white"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/addImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="end"
                android:padding="2dp"
                android:layout_marginStart="100dp"
                android:background="@drawable/dottedcircle"
                android:src="@drawable/profilepic" />
        </LinearLayout>
    </LinearLayout>


    <EditText
        android:id="@+id/et_createName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_features"
        android:padding="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:hint="Full Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_createEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_features"
        android:padding="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:hint="Email"
        android:inputType="text" />

    <EditText
        android:id="@+id/et_createPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_features"
        android:padding="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_createConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext_features"
        android:padding="15dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:maxLines="1"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/btn_RegisterAsLearner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Register"
            android:layout_marginRight="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:background="@drawable/button_features"
            android:textColor="@color/dark_blue" />

        <LinearLayout
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register as Instructor? "
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tvRegisterPageInstructor"
                android:layout_height="wrap_content"
                android:text="Click Here"
                android:textColor="@color/turquoise"
                android:textSize="17sp"
                android:padding="5dp"
                android:textAlignment="center"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linlay_login_here"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tv_changeToLoginPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login Here"
            android:textColor="@color/turquoise"
            android:textSize="17sp"
            android:padding="5dp"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>